# --- Estilo Zsh-Syntax-Highlighting ---

# Comandos
ble-face command_builtin=fg=green
ble-face command_alias=fg=green
ble-face command_function=fg=green
ble-face command_file=fg=green
ble-face command_keyword=fg=green
ble-face command_jobs=fg=green

# Errores
ble-face syntax_error=fg=red,underline
ble-face command_directory=fg=blue,underline

# Argumentos y Strings
ble-face syntax_quoted=fg=yellow
ble-face syntax_glob=fg=magenta
ble-face argument_option=fg=cyan

# --- Autocompletado (Sugerencias) ---
# fg=242 es gris, bg=none QUITA el fondo feo
ble-face auto_complete=fg=242,bg=none

# --- Selección de Menú ---
ble-face menu_filter_input=fg=black,bg=yellow
